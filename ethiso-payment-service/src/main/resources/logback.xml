<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are by default assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>

	<!--<logger name="com.std.ie.jsonrpc.JsonRpcFactory" level="DEBUG" />-->
	<!--<logger name="com.std.ie.jsonrpc.JsonRpcResponse" level="DEBUG" />-->

	<logger name="com.std.ie.ethiso.ethereum.BlockPoller" level="DEBUG" />

	<logger name="com.std.ie.ethiso.ethereum.PendingEvents" level="DEBUG" />

	<logger name="com.std.ie.ethiso.ethereum.TransactionPoller" level="DEBUG" />

</configuration>